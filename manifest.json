{
  "manifest_version": 3,
  "name": "FocusBlock",
  "version": "1.0.0",
  "description": "Block distracting websites to enhance your productivity.",
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/pomodoro/pomodoro.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/lotus.svg",
        "content/content.html",
        "content/content.css",
        "font/Inter-Regular.ttf"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage", "tabs"]
}
