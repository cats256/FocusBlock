{
  "manifest_version": 3,
  "name": "FocusBlock",
  "version": "1.0.0",
  "description": "Block distracting websites to enhance your productivity.",
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["storage", "activeTab"]
}
