{
  "manifest_version": 3,
  "name": "FocusBlock",
  "version": "1.0.0",
  "description": "Block distracting websites",
  "icons": {
    "128": "icon_round.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon_round.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["storage"]
}
